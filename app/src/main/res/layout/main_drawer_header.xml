<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="20dp"
    android:background="@drawable/custom_drawer_header"
    android:id="@+id/relative_header">
    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="55dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/baseline_icon_nguoi_dung_vuong"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/layout_1">
        <TextView
            android:id="@+id/ten_nguoi_dung"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:text="Xin Chào aaaaaa"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/layout_1">

        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp">
            <Button
                android:id="@+id/button_dangNhap_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8dp"
                android:text="Đăng nhập"
                android:textColor="@color/black"
                style="@style/Widget.MaterialComponents.Button.TextButton" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="30dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center">
            <Button
                android:id="@+id/button_dangKy_0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="8dp"
                android:text="Đăng Ký"
                android:textColor="@color/black"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_alignRight="@id/button_dangNhap_0"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>